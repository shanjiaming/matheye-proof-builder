{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "extension: npm compile",
            "type": "shell",
            "command": "npm",
            "options": {
                "cwd": "${workspaceFolder}/extension"
            },
            "args": [
                "run",
                "compile"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Lake Build",
            "type": "shell",
            "command": "lake",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Force Reload Lean Server",
            "type": "shell",
            "command": "echo",
            "args": ["Lean server reload triggered"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}